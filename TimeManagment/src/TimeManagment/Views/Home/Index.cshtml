<html xmlns="http://www.w3.org/1999/xhtml" ng-app="TimeManagment">
<head>
    <title>OnTask</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/ToD0List.css" rel="stylesheet" />
    <!-- Library Files -->
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>
    <script src="~/lib/angular-animate/angular-animate.js"></script>
    <script src="~/lib/angular-touch/angular-touch.js"></script>
    <script src="~/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>

    <!-- App Files-->
    <script src="~/ngapp/app.js"></script>
    <script src="~/ngapp/controllers/controllers.js"></script>
    <script src="~/ngapp/services/services.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-filter/0.5.8/angular-filter.min.js"></script>   <!--Added this for angular.filter-->
    <!-- Security -->
    <script src="~/ngapp/controllers/accountcontroller.js"></script>
    <script src="~/ngapp/services/accountservice.js"></script>

    <script src="~/lib/angularPrint/angularPrint.js"></script>
    <link href="~/lib/angularPrint/angularPrint.css" rel="stylesheet" />
    <base href="/" />
</head>
<body ng-controller="AccountController as account">


    <img class="header" src="~/images/On-Task-Header-dodger-125.jpg" />


    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" ng-init="isCollapsed = true" ng-click="isCollapsed = !isCollapsed">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" ui-sref="home">OnTask</a>
            </div>
            <div id="myNavbar" class="navbar-collapse"  ng-class="{collapse: isCollapsed}">
                <ul class="nav navbar-nav">
                    <li><a ui-sref="home">Home</a></li>
                    <li><a ui-sref="about">About</a></li>
                    <li><a ui-sref="toDoList">To-Do-List</a></li>
                    <li><a ui-sref="contact">Contact Us</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a ui-sref="login" ng-show="!account.isLoggedIn()"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    <li>
                        <a href="#" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a>
                        <div ng-show="account.isLoggedIn()">
                            {{account.getUserName()}}
                        </div>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <!--<a ui-sref="secret">Secret</a>  only one left out for now on the nav bar-->



    <ui-view></ui-view>




</body>
</html>
